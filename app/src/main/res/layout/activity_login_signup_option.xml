<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    tools:context=".LoginSignupOption">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="448dp"
        android:layout_height="486dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logobg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="235dp"
            android:layout_height="92dp"
            android:layout_marginLeft="18dp"
            app:srcCompat="@drawable/logo_text" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/baloo_semibold"
            android:text="Track Your Code"
            android:textColor="@color/white"
            android:textSize="28dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="18dp"
            android:fontFamily="@font/baloo_medium"
            android:onClick="gotoLogin"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="LogIn"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="18dp"
            android:backgroundTint="@color/base"
            android:fontFamily="@font/baloo_medium"
            android:onClick="test"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Signup"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="25dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="20dp"
            android:text="By Continuing You Agree to KODREK's Terms of Services and\nPrivacy Policy"
            android:textAlignment="center"
            android:textColor="@color/sBlack"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>